{
  "name": "deepword",
  "version": "0.2.1",
  "description": "Web editor based on Monaco",
  "main": "server/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudcmd/deepword"
  },
  "keywords": [
    "editor",
    "express",
    "middleware"
  ],
  "author": "coderaiser",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cloudcmd/deepword/issues"
  },
  "homepage": "https://github.com/cloudcmd/deepword",
  "bin": {
    "deepword": "bin/deepword.js"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "babel": {
    "presets": [
      "es2015-rollup",
      "es2017"
    ]
  },
  "scripts": {
    "lint": "redrun lint:*",
    "fix:lint": "redrun -p lint:* --fix",
    "lint:eslint-bin": "eslint --rule 'no-console:0' bin",
    "lint:eslint-lib": "eslint lib",
    "6to5:lib": "babel server -d legacy/server",
    "6to5:bin": "babel bin -d legacy/bin",
    "wisdom": "npm run build",
    "build": "redrun 6to5:* legacy:* build:client",
    "bundle:js": "rollup -u deepword -c .rollup.js -m -f umd -o dist/deepword.js",
    "build:client": "redrun bundle:* minify:*",
    "minify:html": "minify html/index.html > dist/index.html",
    "watch:js": "redrun watcher:js -- \"redrun bundle:js\"",
    "watcher:html": "nodemon -e html -w html -x",
    "watcher:js": "nodemon -w client -w .rollup.js -x",
    "watch:html": "redrun watcher:html -- \"redrun minify:html\"",
    "legacy:index": "echo \"module.exports = require('./server');\" > legacy/index.js"
  },
  "dependencies": {
    "ashify": "^1.0.1",
    "express": "^4.14.0",
    "join-io": "^1.4.0",
    "mollify": "^1.0.4",
    "monaco-editor": "^0.6.1",
    "os-homedir": "^1.0.0",
    "patchfile": "^1.0.1",
    "readjson": "^1.1.0",
    "rendy": "^1.1.0",
    "restafary": "^1.6.0",
    "socket-file": "^1.3.0",
    "socket.io": "^1.4.3",
    "try-catch": "^1.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-es2015-rollup": "^1.2.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "eslint": "^3.6.1",
    "jonny": "^1.0.1",
    "load.js": "git+https://github.com/coderaiser/load.js.git",
    "loadremote": "git+https://github.com/cloudcmd/loadremote.git",
    "minify": "^2.0.11",
    "nodemon": "^1.10.2",
    "pify": "^2.3.0",
    "redrun": "^5.8.4",
    "requirejs": "^2.3.2",
    "rollup": "^0.36.1",
    "rollup-plugin-amd": "^1.1.1",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^5.0.4",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-watch": "^2.5.0",
    "uglify-js": "^2.7.3"
  }
}
