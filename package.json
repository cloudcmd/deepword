{
  "name": "deepword",
  "version": "0.3.0",
  "description": "Web editor based on Monaco",
  "main": "server/index.js",
  "config": {
    "plugins": "-p [ minifyify --map deepword.js.map --output dist/deepword.js.map ]",
    "compile": {
      "client": "--dg false -s deepword -r ./client/index.js:deepword.js ./client/index.js -d -o dist/deepword.js"
    }
  },
  "bin": {
    "deepword": "bin/deepword.js",
    "deepword_": "legacy/bin/deepword.js"
  },
  "browserify": {
    "transform": [
      "browserify-css",
      "babelify"
    ]
  },
  "babel": {
    "plugins": [
      "add-module-exports",
      [
        "transform-runtime",
        {
          "polyfill": false,
          "regenerator": true
        }
      ]
    ],
    "presets": [
      "es2015",
      "es2017"
    ]
  },
  "scripts": {
    "lint": "redrun lint:*",
    "fix:lint": "redrun -p lint:* --fix",
    "lint:eslint-bin": "eslint --rule 'no-console:0' bin",
    "lint:eslint-lib": "eslint lib",
    "6to5:lib": "babel server -d legacy/server",
    "6to5:bin": "babel bin -d legacy/bin",
    "wisdom": "npm run build",
    "build": "redrun dir 6to5:* legacy:* compile:client:min",
    "rollup:bundle:js": "rollup -u deepword -c .rollup.js -m -f umd -o dist/deepword.js",
    "build:client": "redrun compile:* minify:*",
    "compile:client": "browserify $npm_package_config_compile_client",
    "compile:client:min": "browserify $npm_package_config_compile_client $npm_package_config_plugins",
    "watch:client": "watchify -v $npm_package_config_compile_client",
    "minify:html": "minify html/index.html > dist/index.html",
    "rollup:watch:js": "redrun watcher:js -- \"redrun bundle:js\"",
    "watch:html": "redrun watcher:html -- \"redrun minify:html\"",
    "watch": "redrun -p watch:*",
    "watcher:html": "nodemon -e html -w html -x",
    "watcher:js": "nodemon -w client -w .rollup.js -x",
    "legacy:index": "echo \"module.exports = require('./server');\" > legacy/index.js",
    "dir": "mkdirp dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudcmd/deepword"
  },
  "keywords": [
    "editor",
    "express",
    "middleware"
  ],
  "author": "coderaiser",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cloudcmd/deepword/issues"
  },
  "homepage": "https://github.com/cloudcmd/deepword",
  "dependencies": {
    "ashify": "^1.0.1",
    "express": "^4.14.0",
    "join-io": "^1.4.0",
    "load.js": "^1.1.4",
    "mollify": "^1.0.4",
    "monaco-editor": "^0.6.1",
    "os-homedir": "^1.0.0",
    "patchfile": "^1.0.1",
    "readjson": "^1.1.0",
    "rendy": "^1.1.0",
    "restafary": "^1.6.0",
    "smalltalk": "^2.1.3",
    "socket-file": "^1.3.0",
    "socket.io": "^1.4.3",
    "try-catch": "^1.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-es2015-rollup": "^1.2.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "browserify-css": "^0.9.2",
    "currify": "^1.0.0",
    "eslint": "^3.6.1",
    "jonny": "^1.0.1",
    "loadremote": "git+https://github.com/cloudcmd/loadremote.git",
    "minify": "^2.0.11",
    "minifyify": "^7.3.3",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.10.2",
    "pify": "^2.3.0",
    "redrun": "^5.8.4",
    "requirejs": "^2.3.2",
    "rollup": "^0.36.1",
    "rollup-plugin-amd": "^1.1.1",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^5.0.4",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-watch": "^2.5.0",
    "uglify-js": "^2.7.3",
    "watchify": "^3.7.0"
  }
}
